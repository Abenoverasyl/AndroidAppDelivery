<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_after_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    tools:context="ru.ereke.appsalem.WellcomeActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="74dp">

            <Button
                android:text="Доставлен"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDelivered"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:elevation="0dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="24sp" />

            <Button
                android:text="Ошибка"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btnError"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/mobile_delivery"
            android:textSize="24sp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:fontFamily="serif" />

        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Здравствуйте"
            android:textSize="15sp"
            android:padding="2dp"
            android:textColor="@color/white"
            android:fontFamily="casual" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Имя пользователя"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:id="@+id/tvUserName"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:text="Отправить видео"
                android:layout_width="184dp"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:layout_height="69dp"
                android:id="@+id/btnVideoViewWellcome" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="Не найдено"
                    android:id="@+id/tvLocationNet"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="127dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="15sp">
                </TextView>

                <Button
                    android:id="@+id/btnLocationSettings"
                    android:layout_width="118dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/gis"
                    android:onClick="onClickLocationSettings"
                    android:text="@string/location_settings">
                </Button>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
